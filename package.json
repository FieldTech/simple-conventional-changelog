{
  "name": "@fieldtech/simple-conventional-changelog",
  "version": "1.1.5",
  "description": "Simple Commitizen adapter following the conventional-changelog format.",
  "keywords": [
    "automation",
    "changelog",
    "commit",
    "pretty",
    "format",
    "conventional-changelog",
    "commitizen"
  ],
  "main": "index.js",
  "scripts": {
    "commit": "git-cz",
    "test": "mocha *.test.js",
    "format": "prettier --write *.js",
    "semantic-release": "semantic-release"
  },
  "homepage": "https://github.com/FieldTech/simple-conventional-changelog#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/FieldTech/simple-conventional-changelog.git"
  },
  "engineStrict": true,
  "engines": {
    "node": ">= 10"
  },
  "author": "Justina Chen <rcfans@163.com>",
  "license": "MIT",
  "dependencies": {
    "@fieldtech/conventional-commit-types-zh-cn": "^1.0.0",
    "chalk": "^2.4.1",
    "lodash.map": "^4.5.1",
    "longest": "^2.0.1",
    "right-pad": "^1.0.1",
    "word-wrap": "^1.0.3"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "cosmiconfig": "^5.2.1",
    "mocha": "^8.0.0",
    "mock-require": "^3.0.3",
    "prettier": "^1.15.3",
    "semantic-release": "17.1.1",
    "semver": "^6.2.0"
  },
  "optionalDependencies": {
    "@commitlint/load": ">=8.3.5"
  },
  "config": {
    "commitizen": {
      "path": "./index.js"
    }
  }
}
